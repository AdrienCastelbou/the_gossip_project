<%= form_tag users_path, method: "post" do %>

      <%= label_tag 'Prénom' %>
      <%= text_field_tag 'first_name', "", class: 'form-control'  %>
      <br /> <br />
      <%= label_tag 'Nom' %>
      <%= text_field_tag 'lastt_name', "", class: 'form-control'  %>
      <br /> <br />
      <%= label_tag 'age' %>
      <%= text_field_tag 'age', "", class: 'form-control'  %>
      <br /> <br />
      <%= label_tag 'email' %>
      <%= text_field_tag 'email', "", class: 'form-control'  %>
      <br /> <br />
      <%= label_tag 'ville' %>
      <%= text_field_tag 'city', "", class: 'form-control'  %>
      <br /> <br />
      <%= label_tag 'Mot de passe' %>
      <%= text_field_tag 'password', "", class: 'form-control'  %>
      <br /> <br />
      <%= label_tag 'Confirmer le mot de passe' %>
      <%= text_field_tag 'password_confirmation', "", class: 'form-control'  %>
      <br /> <br />
      <%= check_box_tag 'accept'%>
      <%= label_tag 'Se souvenir de moi' %>
      <br /> <br />
      <%= submit_tag "S'inscrire", class: "btn btn-primary" %>

<% end %>

<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
  <p>Nous n'avons pas réussi à créer l'user pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>
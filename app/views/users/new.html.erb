<%= form_tag users_path, method: "post" do %>

      <%= label_tag 'Prénom' %>
      <%= text_field_tag 'first_name'  %>
      <br /> <br />
      <%= label_tag 'Nom' %>
      <%= text_field_tag 'lastt_name'  %>
      <br /> <br />
      <%= label_tag 'age' %>
      <%= text_field_tag 'age'  %>
      <br /> <br />
      <%= label_tag 'email' %>
      <%= text_field_tag 'email'  %>
      <br /> <br />
      <%= label_tag 'Mot de passe' %>
      <%= text_field_tag 'password'  %>
      <br /> <br />
      <%= label_tag 'Confirmer le mot de passe' %>
      <%= text_field_tag 'password_confirmation'  %>
      <br /> <br />
      <%= submit_tag "S'inscrire" %>

<% end %>

<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
  <p>Nous n'avons pas réussi à créer l'user pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>
<%= form_tag gossips_path, method: "post" do %>

      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', "", class: 'form-control'  %>
      <br /> <br />

      <%= label_tag 'Content' %>
      <%= text_area_tag 'content', "", class: 'form-control' %>
      <br /> <br />
      <%= submit_tag "Create Gossip", class: "btn btn-primary" %>

<% end %>
<% if @gossip.errors.any? %>
  <div class="alert alert-danger" role="alert">
  <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @gossip.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

